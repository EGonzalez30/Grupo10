<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controlador.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NominasServlet</servlet-name>
        <servlet-class>controlador.NominasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpleadoServlet</servlet-name>
        <servlet-class>controlador.EmpleadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartamentoServlet</servlet-name>
        <servlet-class>controlador.DepartamentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContratoServlet</servlet-name>
        <servlet-class>controlador.ContratoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargoServlet</servlet-name>
        <servlet-class>controlador.CargoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NominasServlet</servlet-name>
        <url-pattern>/nominas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpleadoServlet</servlet-name>
        <url-pattern>/empleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartamentoServlet</servlet-name>
        <url-pattern>/departamento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContratoServlet</servlet-name>
        <url-pattern>/contrato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargoServlet</servlet-name>
        <url-pattern>/cargo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
